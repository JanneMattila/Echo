@model string
<div>
    Send data to <pre style="display: inline;">@Model/api/echo</pre> endpoint to see it here. <button onclick="document.getElementById('help').style.display = '';">?</button>
</div>
<div id="help" style="background-color:lightyellow;display:none">
    <button onclick="document.getElementById('help').style.display = 'none';">X</button>
    <br /><br />

    Using curl:
    <pre id="curl">curl -d '{ "firstName": "John", "lastName": "Doe" }' -H "Content-Type: application/json" -X POST @Model/api/echo</pre>

    Using PowerShell:
    <pre id="curl">$url = "@Model/api/echo"
$data = @@{
    firstName = "John"
    lastName = "Doe"
}
$body = ConvertTo-Json $data
Invoke-RestMethod -Body $body -ContentType "application/json" -Method "POST" -DisableKeepAlive -Uri $url</pre>
    <br />
</div>

<div id="echo"></div>

@section Scripts
{
<environment include="Development">
    <script src="lib/signalr/signalr.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="lib/signalr/signalr.min.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>
}